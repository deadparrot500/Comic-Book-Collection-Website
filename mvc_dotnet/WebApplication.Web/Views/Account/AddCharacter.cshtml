@model WebApplication.Web.Models.Comic

@{
    ViewData["Title"] = "AddCharacter";
}

<h2>Add a Character</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCharacter" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" name="comicId" id="comicId" value="@Model.ComicId" />
                <input type="hidden" name="publisher" id="publisher" value="@Model.Publisher" />
            </div>

            <div class="form-group">
                <label asp-for="SearchCharacter" class="control-label" value="Character Name">Character Name</label>
                <input asp-for="SearchCharacter" class="form-control"/>
                <span asp-validation-for="SearchCharacter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
