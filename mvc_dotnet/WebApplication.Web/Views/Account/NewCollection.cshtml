@model WebApplication.Web.Models.Collection

@{
    ViewData["Title"] = "NewCollection";
}

<div class="container" id="containerForCreateNewCollection">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="createCollectionHead">
                <b>Create a New Collection</b>
            </div>
            <form asp-action="NewCollection">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CollectionName" class="control-label">Collection Name</label>
                    <input asp-for="CollectionName" class="form-control" />
                    <span asp-validation-for="CollectionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="PublicStatus" /> Make Collection Public (able to be seen by everyone)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
            <a asp-action="Index">Back to List</a>
        </div>
          
    </div>
</div>

<div class="col-lg-1"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}